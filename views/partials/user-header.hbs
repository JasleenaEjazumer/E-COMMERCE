                    {{#if user}}
                    {{user.Name}}
                    {{else}}
                    Account
                    {{/if}}
                    
                </button>
                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton" >
                    <i class="fas fa-user"></i>
                    {{#if user}}
