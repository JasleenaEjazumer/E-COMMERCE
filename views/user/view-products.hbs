
    <section>
        <div class="container mt-4">
            <div class="row">
                {{#each products}}
                <div class="col-md-3">
                    <div class="card" style=" width: 20rem; height: 23rem;">
                        <img class="card-img-top"
                            src="/product-images/{{this._id}}.jpg"
                            alt="Card image cap"  >
                        <div class="card-body">
                            <h5 class="card-title">{{this.Name}}</h5>
                            <h6 class="card-type">{{this.Category}}</h6>
                            <h7 class="card-type">{{this.Price}}</h7>
                            <p class="card-text">{{this.Description}}</p>
                        
                            <button onclick="addToCart('{{this._id}}')" class="btn btn-primary">Add To Cart</button>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>

        </div>
    
    </section>


