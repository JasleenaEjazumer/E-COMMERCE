<section>
    
   <div class=container>
    <div class="row mt-5">
        <a href="/admin/add-product" class="btn btn-success ml-auto">Add product</a>
    </div>
    <table class="table mt-5">
  <thead>
    <tr>
      <th scope="col">NO</th>
      <th scope="col">Name</th>
      <th scope="col">Category</th>
      <th scope="col">Description</th>
      <th scope="col">Price</th>
      <th> Image</th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}

   <tr>
      <th scope="row">1</th>
      <td>{{this.Name}}</td>
      <td>{{this.Category}}</td>
      <td>{{this.Description}}</td>
      <td>{{this.Price}}</td>
      <td> <img src="/product-images/{{this._id}}.jpg" alt="" style="height: 10rem;" ></td>
      <td>
        <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
        <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('R u sure you want to delete the data {{this.Name}}?')">Delete</a>
         
      </td>
    </tr>
  
    {{/each}}
    
  </tbody>
</table>
   </div>
</section>